programa
{
	inclua biblioteca Texto --> t
	inclua biblioteca Util
 --> u

	
	funcao inicio()
	{
		cadeia resposta
	
		cadeia narrador = "Olá jogador! Eu sou o narrador, você esta pronto para se torna a poderosa guerreira Neera?"
		escreva("\n")
		escrevaMaquina(narrador, 25)
		escreva("\n")
		escreva("------------------------\n")
		escreva(" sim --> s   não --> n ")
		escreva("\n")
		
		escolhaJogador()
		
	}

	
	funcao escrevaMaquina(cadeia texto, inteiro velocidade){ // escrita dos textos

		para(inteiro i=0; i < t.numero_caracteres(texto); i++){
		escreva(t.obter_caracter(texto, i))
		u.aguarde(velocidade)
	}
}

	funcao escolhaJogador(){ // escolhe se vai começar o jogo
		cadeia respostaJogador
		leia(respostaJogador)

		se(respostaJogador == "s" ou respostaJogador == "S"){
			inicioJogo()
		}

		senao se(respostaJogador == "n" ou respostaJogador == "N"){
			cadeia nao_esta_proto = "Que pena! Talvez você esteja pronto(a) na proxima."
			escrevaMaquina(nao_esta_proto, 25)
		}senao{
			enquanto(respostaJogador != "s" ou respostaJogador != "S" ou respostaJogador != "n" ou respostaJogador != "N"){
				escreva("Resposta inválida! Tente novamente: ")
				leia(respostaJogador)
				
			}
		}

		
	}

	funcao inicioJogo(){ // contextualizando a história do jogo e decorre

		limpa()
		cadeia contexto1 = "Em um dia como qualquer outro. A poderosa guerreira Neera, muito conhecida no reino de Galad pelos seus grandes feitos. Escuta um bater de asas alto vindo do céu."// parte do Rex 
		escrevaMaquina(contexto1, 25)
		escreva("\n")
		
		cadeia contexto2 = "Quando ela olha para cima avista um grande dragão da Floresta dos Sussuros voando e fugindo de flexas, segurando algo em suas garras."
		escrevaMaquina(contexto2, 25)
		escreva("\n")
		
		cadeia contexto3 = "Curiosa pelo motivo do dragão estar voando por cima do reino. A Neera decide ir até o castelo do rei"
		escrevaMaquina(contexto3, 25)

		
		cadeia suspense1 = "."
		escrevaMaquina(suspense1, 1000)
		cadeia suspense2 = "."
		escrevaMaquina(suspense2, 1000)
		cadeia suspense3 = "."
		escrevaMaquina(suspense3, 1000)
		escreva("\n")
		escreva("\n")
		
		cadeia contexto4 = "Chegando no grande portão do castelo, Neera avista o rei e alguns soltados agitados. O rei percebe a sua presensa e chama ela."
		escrevaMaquina(contexto4, 25)
		escreva("\n")

		cadeia contexto5 = "Ele pede ajuda para Neera salvar o seu filho Idris o atual principe de Galad, das garras do dragão."
		escrevaMaquina(contexto5, 25)
		escreva("\n")



		
		cadeia fala1 = "Rei Mirk: Guerreira Neera! preciso de você agora." // parte do Rex
		escrevaMaquina(fala1, 25)
		escreva("\n")
		
		cadeia fala2 = "Neera: magestade o que houve?" // parte do Rex
		escrevaMaquina(fala2, 25)
		escreva("\n")
		
		cadeia fala3 = "Rei Mirk: O meu filho foi levado pelo poderoso dragão. Você pode ir salva-lo?" // parte do Rex
		escrevaMaquina(fala3, 25)
		escreva("\n")
		
		escreva("------------------------\n")
		escreva(" sim --> s   não --> n ")
		escreva("\n")
		cadeia respostaNeera 
		leia(respostaNeera)

		se(respostaNeera == "s" ou respostaNeera == "S"){
			escreva("oii")
		}
		senao se (respostaNeera == "n" ou respostaNeera == "N"){
			cadeia prisao = "Rei Mirk: Não!? Guardas! Prendão ela, AGORA!!!!"
			escrevaMaquina(prisao, 25)
			escreva("\n")
			
			cadeia game_over = "(Neera é presa para sempre, apodrecendo no calabouço. O principe Idris não é salvo e nunca mais é visto. O rei Mirk vive o resto de sua vida em tristeza profunda.)"
			escrevaMaquina(prisao, 25)
			escreva("\n")
			escreva("\n")
			escreva("\n")

			
		}

	}

	funcao primeiraBatalha(){
		
	}
}
